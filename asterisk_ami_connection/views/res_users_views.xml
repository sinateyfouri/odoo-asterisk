<odoo>
    <record id="view_users_form_asiapardaz" model="ir.ui.view">
        <field name="name">res.users.form.asiapardaz</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='login']" position="after">
                <label for="asiapardaz_extension"/>
                <field name="asiapardaz_extension" string="User Extension for Asiapardaz VoIP"/>
            </xpath>
        </field>
    </record>
</odoo>